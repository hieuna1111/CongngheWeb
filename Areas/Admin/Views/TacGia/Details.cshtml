@model WebApplication.Models.EF.TacGia

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</head>

<div class="card-header py-3 text-center">
    <h2 class="m-0 font-weight-bold text-primary">Tác Giả</h2>
</div>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Admin">Trang Chủ</a></li>
        <li class="breadcrumb-item"><a href="~/Admin/TacGia">Tác Giả</a></li>
        <li class="breadcrumb-item active" aria-current="page">Xem Chi Tiết</li>
    </ol>
</nav>

<div class="card shadow mb-4">
    <div class="row-cols-1">
        <div class="col-10">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tên tác giả</th>
                        <th>Địa chỉ</th>
                        <th>Số điện thoại</th>
                        <th>Tiểu sử</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Html.DisplayFor(model => model.HoTenTG)</td>
                        <td>@Html.DisplayFor(model => model.DiaChi)</td>
                        <td>@Html.DisplayFor(model => model.DienThoai)</td>
                        <td>@Html.DisplayFor(model => model.TieuSu)</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <p>
            <td>
                <a href="@Url.Content("~/Admin/TacGia/Edit?id=")@Model.ID" class="btn btn-outline-info"><span class="glyphicon glyphicon-pencil"></span>Sửa</a>
            </td>
            @Html.ActionLink("Trở về", "Index")
        </p>
    </div>
</div>
