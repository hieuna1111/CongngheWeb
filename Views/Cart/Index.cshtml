@model List<WebApplication.Models._EF.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section jsFooter{
    <script src="/Assets/Admin2/js/Controller/cartController.js"></script>
}

<section id="cart_items">
    <div class="container">
        <div class="breadcrumbs">
            <ol class="breadcrumb">
                <li><a href="~/Home/Index">Home</a></li>
                <li class="active">Cart</li>
            </ol>
        </div>
        @if (Model.Count > 0)
        {
            <div class="table-responsive cart_info">
                <table class="table table-condensed">
                    <thead>
                        <tr class="cart_menu">
                            <td class="image">Sản phẩm</td>
                            <td class="description">Tên sách</td>
                            <td class="price">Giá</td>
                            <td class="quantity">Số lượng</td>
                            <td class="total">Tổng tiền</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="cart_product">
                                    <a href=""><img src="@Url.Content(item.sach.AnhBia)" alt="" style="width:100px;height:135px"></a>
                                </td>

                                <td class="cart_description">
                                    <p><a href="">@item.sach.TenSach</a></p>
                                    @*<p>Web ID: 1089772</p>*@
                                </td>

                                <td class="cart_price">
                                    <p>@item.sach.GiaBan.GetValueOrDefault(0)</p>
                                </td>

                                <td class="cart_quantity">
                                    <div class="cart_quantity_button">
                                        @*<a class="cart_quantity_up" href=""> + </a>*@
                                        <input class="cart_quantity_input" type="text" name="quantity" data-id="@item.sach.ID" value="@item.Quantity" autocomplete="off" size="2">
                                        @*<a class="cart_quantity_down" href=""> - </a>*@
                                    </div>
                                </td>

                                <td class="cart_total">
                                    <p class="cart_total_price">@(item.sach.GiaBan.GetValueOrDefault(0) * item.Quantity)</p>
                                </td>

                                <td class="cart_delete">
                                    <a href="#" class="cart_quantity_delete" data-id="@item.sach.ID"><i class="fa fa-times"></i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

                <button id="btnContinue" class="btn btn-default update">Tiếp tục mua hàng</button>
                <button id="btnUpdate" class="btn btn-default update">Cập nhật giỏ hàng</button>
                <button id="btnDeleteAll" class="btn btn-default update">Xóa toàn bộ giỏ hàng</button>
                <button id="btnPayment" class="btn btn-default update">Thanh toán</button>
            </div>
        }
        else
        {
            <div class="col-sm-12">
                <h2 class="title text-center">Chưa có sản phẩm nào trong giỏ hàng</h2>
            </div>
        }
    </div>
</section>
